<%- include( '../helpers/sorting' ) -%>

<div id="main-content" class="content__main">
	<div class="article__wrapper">
		<div class="article__body">
			<%- templateData.post.body %>
			<div class="clear-fix"></div>
		</div>
	</div>
</div>

<div class="content__after">
	<div class="career-timeline">
		<h3 id="work-history" class="career-timeline__title-wrapper">
			<span class="career-timeline__title">Work History</span>
		</h3>
		<div class="career-timeline__company-list" role="list">

			<% templateData.companies.forEach( company => { %>
				<div class="career-timeline__company" role="listitem">
					<div class="career-timeline__company-wrapper">
						<span class="career-timeline__bar-components"></span>
						<h4 class="career-timeline__position has-dark-bg">
							<%= company.meta.position %>
							<span class="career-timeline__dates has-dark-bg"><%- company.meta.employmentTimeframe %></span>
						</h4>
						<h3 class="career-timeline__company-name has-dark-bg">
							<a href="<%= `${ templateData.site.core.siteUrl }/${ company.post.publicPath }` %>" class="career-timeline__company-name-link">
								<%= company.post.title %>
							</a>
						</h3>
						<% console.log( company.post.summary ) %>
						<p class="career-timeline__desc has-dark-bg"><%- company.post.summary %></p>
						<a href="<%= `${ templateData.site.core.siteUrl }/${ company.post.publicPath }` %>" class="career-timeline__cta has-dark-bg">Read More</a>
					</div>
				</div>
			<% } ); %>

		</div>
	</div>
</div>
